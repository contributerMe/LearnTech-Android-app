<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneLoginActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="350sp"
        android:layout_height="350sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/loginphone_img" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="390sp"
        android:layout_marginRight="120sp"
        android:text="Enter your mobile number"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="430dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/phonenum"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:hint=""
            android:drawablePadding="10dp"/>
        <requestFocus/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp">

        <Button
            android:id="@+id/getotp"
            android:layout_width="300sp"
            android:layout_height="55sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="545sp"
            android:backgroundTint="#1B2E35"
            android:text="Get OTP"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="615sp"
        android:layout_marginRight="30sp"
        android:autoLink="web"
        android:text="By clicking, I accept the terms of service and privacy policy"
        android:textSize="18sp" />

</RelativeLayout>
</ScrollView>